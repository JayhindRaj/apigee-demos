<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<TargetEndpoint name="default">
    <PreFlow name="PreFlow">
        <Request/>
        <Response/>
    </PreFlow>
    <Flows/>
    <PostFlow name="PostFlow">
        <Request/>
        <Response/>
    </PostFlow>
    <HTTPTargetConnection>
        <Properties/>
        <SSLInfo>
            <Enabled>true</Enabled>
        </SSLInfo>
        <LoadBalancer>
            <Alogrithm>
                Weighted
            </Alogrithm>
            <Server name="target-server-1" weight="3"/>
            <Server name="target-server-2" weight="1"/>
        </LoadBalancer>
        <Path>/json</Path>
    </HTTPTargetConnection>
</TargetEndpoint>